{
    "manifest_version": 3,
    "name": "Break Reminder",
    "version": "1.0",
    "description": "Reminds you to take a break after a set period of browser usage.",
    "permissions": [
      "notifications",
      "alarms",
      "storage",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }